<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <a type="button" href="/home" class="btn btn-warning">Home</a>

</head>
<div class="ring text-center mt-2">
    <h3 class="display-6">TABLE</h3>
</div>

<section style="padding-top: 2%;">
    <div class="container  " style="background-color: rgb(230, 186, 225);">
        <table class="table ">
            <thead>
                <tr>
                    {{!-- <th scope="col">No</th> --}}
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>

                    <th>image</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    {{!-- <th scope="row">1</th> --}}
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>

                    <td><img style="width: 70px; height: 70px;" src="{{this.image}}" alt=""></td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

